    <script>
        // S·ªë s·∫£n ph·∫©m m·ªói trang
        const PAGE_SIZE = 10;
        let allProducts = [];
        let currentPage = 1;

        function renderProductsPage(page) {
            let start = (page - 1) * PAGE_SIZE;
            let end = start + PAGE_SIZE;
            let products = allProducts.slice(start, end);

            var html = '';
            products.forEach(function(p) {
                html += '<tr>';
                html += '<td>' +
                    (p.imageUrl ? '<img src="' + p.imageUrl + '" class="img-fluid" style="max-width:60px;max-height:60px;object-fit:cover;" alt="">' : 'N/A') +
                    '</td>';
                html += '<td>' + p.name + '</td>';
                html += '<td>' + p.price + '</td>';
                html += '<td>' + (p.imageDescription ? p.imageDescription : '-') + '</td>';
                html += '<td>' +
                    (p.approvalStatus === 'pending' ? '<span class="badge bg-warning">Ch·ªù duy·ªát</span>' :
                    p.approvalStatus === 'accepted' ? '<span class="badge bg-success">ƒê√£ duy·ªát</span>' :
                    p.approvalStatus === 'rejected' ? '<span class="badge bg-danger">T·ª´ ch·ªëi</span>' :
                    p.approvalStatus === 'cancelled' ? '<span class="badge bg-secondary">ƒê√£ h·ªßy</span>' :
                    p.approvalStatus) +
                    '</td>';
                html += '<td>';
                if (p.approvalStatus === 'accepted') {
                    html += '<button class="btn btn-danger btn-sm" onclick="showCancelModal(' + p.id + ')">H·ªßy b√°n</button>';
                } else if (p.approvalStatus === 'pending') {
                    html += '<span class="text-muted">-</span>';
                } else if (p.approvalStatus === 'rejected' || p.approvalStatus === 'cancelled') {
                    html += '<button class="btn btn-success btn-sm" onclick="resellProduct(' + p.id + ')">B√°n l·∫°i</button>';
                }
                html += '</td>';
                html += '</tr>';
            });
            $('#my-products-tbody').html(html);
        }

        function renderPagination() {
            let totalPages = Math.ceil(allProducts.length / PAGE_SIZE);
            let $pagination = $('#my-pagination ul.pagination');
            if (totalPages <= 1) {
                $('#my-pagination').hide();
                return;
            }
            $('#my-pagination').show();
            let html = '';
            html += `<li class="page-item${currentPage === 1 ? ' disabled' : ''}">
                        <a class="page-link" href="javascript:void(0)" onclick="gotoPage(${currentPage - 1})">
                            <i class="fa-solid fa-angles-left"></i>
                        </a>
                    </li>`;
            for (let i = 1; i <= totalPages; i++) {
                html += `<li class="page-item${i === currentPage ? ' active' : ''}">
                            <a class="page-link" href="javascript:void(0)" onclick="gotoPage(${i})">${i}</a>
                        </li>`;
            }
            html += `<li class="page-item${currentPage === totalPages ? ' disabled' : ''}">
                        <a class="page-link" href="javascript:void(0)" onclick="gotoPage(${currentPage + 1})">
                            <i class="fa-solid fa-angles-right"></i>
                        </a>
                    </li>`;
            $pagination.html(html);
        }

        function gotoPage(page) {
            let totalPages = Math.ceil(allProducts.length / PAGE_SIZE);
            if (page < 1 || page > totalPages) return;
            currentPage = page;
            renderProductsPage(currentPage);
            renderPagination();
        }

        function loadMyProducts() {
            $.get('/api/famer/products', function(products) {
                allProducts = products;
                currentPage = 1;
                renderProductsPage(currentPage);
                renderPagination();
            });
        }

        $(document).ready(function() {
            loadMyProducts();

            // X·ª≠ l√Ω submit h·ªßy b√°n
            $('#cancelProductForm').on('submit', function(e) {
                e.preventDefault();
                var productId = $('#cancelProductId').val();
                var reason = $('#cancelReason').val();
                // G·ª≠i AJAX POST l√™n server (b·∫°n c·∫ßn t·∫°o API ho·∫∑c action cho vi·ªác n√†y)
                $.post('/famer/cancelproduct', { productId: productId, reason: reason }, function(res) {
                    $('#cancelProductModal').modal('hide');
                    loadMyProducts();
                    // C√≥ th·ªÉ hi·ªán th√¥ng b√°o th√†nh c√¥ng ·ªü ƒë√¢y
                });
            });
        });

        // Hi·ªÉn th·ªã modal x√°c nh·∫≠n h·ªßy b√°n
        function showCancelModal(productId) {
            $('#cancelProductId').val(productId);
            $('#cancelReason').val('');
            $('#cancelProductModal').modal('show');
        }

        // Th√™m h√†m b√°n l·∫°i s·∫£n ph·∫©m
        function resellProduct(productId) {
            if (!confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën b√°n l·∫°i s·∫£n ph·∫©m n√†y?')) return;
            $.post('/famer/resellproduct', { productId: productId }, function(res) {
                if (res.success) {
                    loadMyProducts();
                } else {
                    alert('Kh√¥ng th·ªÉ b√°n l·∫°i s·∫£n ph·∫©m.');
                }
            }).fail(function(xhr) {
                alert(xhr.responseText || 'C√≥ l·ªói x·∫£y ra khi b√°n l·∫°i s·∫£n ph·∫©m.');
            });
        }
    </script>
