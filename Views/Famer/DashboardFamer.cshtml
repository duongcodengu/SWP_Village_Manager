                                                @* table hien thi list product *@
                                            </tbody>
                                        </table>

                                        <nav class="custom-pagination" id="my-pagination" style="display:none">
                                            <ul class="pagination justify-content-center"></ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                            @* tab product end *@

                            

