            const wardSelect = document.getElementById('addressWardSelect');

            wardSelect.innerHTML = '<option value="">Chọn phường/xã</option>';

            const selectedProvince = provinces.find(p => p.code == provinceSelect.value);
            const selectedDistrict = selectedProvince?.districts.find(d => d.code == districtSelect.value);
            
            if (!selectedDistrict) return;

            selectedDistrict.wards.forEach(w => {
                wardSelect.add(new Option(w.name, w.code));
            });
            wardSelect.disabled = false;
        }

