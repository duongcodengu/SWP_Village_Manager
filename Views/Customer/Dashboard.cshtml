            document.getElementById('addressLng').value = longitude;
            
            document.getElementById('addAddressModalLabel').textContent = 'Sửa địa chỉ';
            document.getElementById('addressForm').action = '@Url.Action("EditAddress", "Customer")';
            
            const modal = new bootstrap.Modal(document.getElementById('addAddressModal'));
            modal.show();
        }

        // Hàm xóa địa chỉ
        function deleteAddress(id) {
            document.getElementById('deleteAddressId').value = id;
            
            const modal = new bootstrap.Modal(document.getElementById('deleteAddressModal'));
            modal.show();
        }

        // Xử lý form thêm/sửa địa chỉ
        document.getElementById('addressForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const label = document.getElementById('addressLabel').value.trim();
            const detailAddress = document.getElementById('addressDetail').value.trim();
            const provinceSelect = document.getElementById('addressProvinceSelect');
            const districtSelect = document.getElementById('addressDistrictSelect');
            const wardSelect = document.getElementById('addressWardSelect');
            
            // Validation
            if (!label || !detailAddress || !provinceSelect.value || !districtSelect.value || !wardSelect.value) {
                alert("Vui lòng nhập đầy đủ thông tin địa chỉ.");
                return;
            }

            // Tạo địa chỉ đầy đủ giống FamerBecome
            const provinceText = provinceSelect.options[provinceSelect.selectedIndex]?.text;
            const districtText = districtSelect.options[districtSelect.selectedIndex]?.text;
            const wardText = wardSelect.options[wardSelect.selectedIndex]?.text;

            const fullAddress = `${detailAddress}, ${wardText}, ${districtText}, ${provinceText}`;
            
            // Tạo input ẩn để gửi địa chỉ đầy đủ
            let addressInput = document.getElementById('addressInput');
            if (!addressInput) {
                addressInput = document.createElement('input');
                addressInput.type = 'hidden';
                addressInput.name = 'address';
                addressInput.id = 'addressInput';
                this.appendChild(addressInput);
            }
            addressInput.value = fullAddress;
            
            // Submit form
            this.submit();
        });

        // Reset modal khi đóng
        document.getElementById('addAddressModal').addEventListener('hidden.bs.modal', function() {
            document.getElementById('addressId').value = '0';
            document.getElementById('addressLabel').value = '';
            document.getElementById('addressDetail').value = '';
            document.getElementById('addressLat').value = '';
            document.getElementById('addressLng').value = '';
            document.getElementById('addAddressModalLabel').textContent = 'Thêm địa chỉ mới';
            document.getElementById('addressForm').action = '@Url.Action("AddAddress", "Customer")';
            
            // Reset các dropdown
            document.getElementById('addressProvinceSelect').value = '';
            document.getElementById('addressDistrictSelect').innerHTML = '<option value="">Chọn quận/huyện</option>';
            document.getElementById('addressWardSelect').innerHTML = '<option value="">Chọn phường/xã</option>';
            document.getElementById('addressDistrictSelect').disabled = true;
            document.getElementById('addressWardSelect').disabled = true;
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>

