                                    <div class="title">
                                        <h2>Lịch sử Đơn hàng</h2>
                                        <span class="title-leaf title-leaf-gray">
                                            <svg class="icon-width bg-gray"><use xlink:href="~/svg/leaf.svg#leaf"></use></svg>
                                        </span>
                                    </div>

                                    <div class="order-history-container">
                                        @if (orderHistory == null || !orderHistory.Any())
                                        {
                                            <div class="empty-order-history">
                                                <i data-feather="shopping-bag"></i>
                                                <h4>Bạn chưa có đơn hàng nào.</h4>
                                                <p>Hãy bắt đầu mua sắm để xem lịch sử của bạn tại đây!</p>
                                                <a asp-controller="Home" asp-action="Index" class="btn btn-primary-transparent">Bắt đầu mua sắm</a>
                                            </div>
                                        }
                                        else
                                        {
                                            @foreach (var order in orderHistory)
                                            {
                                                var total = order.RetailOrderItems.Sum(i => i.Quantity * (i.UnitPrice ?? 0));
                                                <div class="order-card">
                                                    <div class="order-card-header">
                                                        <div class="header-left">
                                                            <h5>Đơn hàng #@order.Id</h5>
                                                            <p>Ngày đặt: @(order.OrderDate?.ToString("dd/MM/yyyy"))</p>
                                                        </div>
                                                        <div class="header-right">
                                                            <span class="status-badge status-@order.Status?.ToLower()">@order.Status</span>
                                                            <h5 class="order-total">@(order.RetailOrderItems.Sum(i => i.Quantity * i.UnitPrice)?.ToString("C0", new System.Globalization.CultureInfo("vi-VN")))</h5>
                                                        </div>
                                                    </div>

                                                    <div class="order-card-body">
                                                        <div class="d-flex gap-2">
                                                            <a asp-action="OrderDetail" asp-controller="Customer" asp-route-id="@order.Id"
                                                               class="btn btn-primary"
                                                               onclick="loadOrderDetail(@order.Id); return false;">
                                                                Xem chi tiết
                                                            </a>

                                                            @if (order.Status == "pending")
                                                            {
                                                                <a asp-action="CancelOrder" asp-controller="Customer"
                                                                   asp-route-orderId="@order.Id" asp-route-type="retail"
                                                                   class="btn btn-sm btn-outline-danger">
                                                                    Huỷ hàng
                                                                </a>
                                                            }
                                                            else if (order.Status == "delivered")
                                                            {
                                                                <a asp-action="ReturnOrder" asp-controller="Customer"
                                                                   asp-route-orderId="@order.Id" asp-route-type="retail"
                                                                   class="btn btn-sm btn-outline-warning">
                                                                    Hoàn hàng
                                                                </a>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
