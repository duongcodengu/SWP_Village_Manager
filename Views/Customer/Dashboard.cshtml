                                                        <h5>Tổng số đơn hàng</h5>
                                                        <h3>@ViewBag.TotalOrders</h3>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-xxl-6 col-lg-6 col-md-6 col-sm-6">
                                                <div class="total-contain">
