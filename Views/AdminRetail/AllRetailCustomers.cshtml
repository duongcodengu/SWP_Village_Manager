@{
    ViewData["Title"] = "Tất cả khách hàng bán lẻ";
    Layout = "~/Views/Shared/_AdminRetail.cshtml";
}
<!DOCTYPE html>
<html lang="vi" dir="ltr">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="FamViệt - Hệ thống quản lý khách hàng bán lẻ, giao diện tiếng Việt, dễ sử dụng.">
    <meta name="keywords"
          content="quản lý khách hàng, FamViệt admin, khách hàng bán lẻ, giao diện quản trị">
    <meta name="author" content="FamViệt">
    <link rel="icon" href="~/back-end/images/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/back-end/images/favicon.png" type="image/x-icon">
    <title>FamViệt - Quản lý khách hàng</title>
    <!-- Phông chữ Google -->
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">

    <!-- CSS Fontawesome -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/font-awesome.css">

    <!-- CSS Linear Icon -->
    <link rel="stylesheet" href="~/back-end/css/linearicon.css">

    <!-- CSS Remixicon -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/remixicon.css">

    <!-- CSS Bảng dữ liệu -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/datatables.css">

    <!-- CSS Biểu tượng Themify -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/themify.css">

    <!-- CSS Biểu tượng Feather -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/feather-icon.css">

    <!-- CSS Plugins -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/scrollbar.css">
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/animate.css">

    <!-- CSS Bootstrap -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/bootstrap.css">

    <!-- CSS Ứng dụng -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/style.css">
</head>

<body>
    <!-- Bắt đầu page-wrapper -->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <!-- Bắt đầu Page Body -->
        <div class="page-body-wrapper">
            <!-- Bắt đầu Container-fluid -->
            <div class="page-body">
                <!-- Bắt đầu Bảng khách hàng bán lẻ -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card card-table">
                                <div class="card-body">
                                    <div class="title-header option-title">
                                        <h5>Tất cả khách hàng bán lẻ</h5>
                                        <form class="d-inline-flex">
                                            <a href="add-new-user.html" class="align-items-center btn btn-theme d-flex">
                                                <i data-feather="plus"></i>Thêm mới
                                            </a>
                                        </form>
                                    </div>

                                    <div class="table-responsive table-product">
                                        <table class="table all-package theme-table" id="table_id">
                                            <thead>
                                                <tr>
                                                    <th>Người dùng</th>
                                                    <th>Tên</th>
                                                    <th>Số điện thoại</th>
                                                    <th>Email</th>
                                                    <th>Tùy chọn</th>
                                                </tr>
                                            </thead>
                                            @foreach (var customer in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="table-image">
                                                            <img src="~/back-end/images/users/1.jpg" class="img-fluid" alt="">
                                                        </div>
                                                    </td>

                                                    <td>
                                                        <div class="user-name">
                                                            <span>@customer.FullName</span>

                                                        </div>
                                                    </td>

                                                    <td>@customer.Phone</td>
                                                    <td>@customer.User?.Email</td>

                                                    <td>
                                                        <ul>
                                                            <li><a href="/order-detail/@customer.Id"><i class="ri-eye-line"></i></a></li>
                                                            <li><a href="#"><i class="ri-pencil-line"></i></a></li>
                                                            <li><a href="#" data-bs-toggle="modal" data-bs-target="#exampleModalToggle"><i class="ri-delete-bin-line"></i></a></li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                            }

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Kết thúc Bảng khách hàng bán lẻ -->

                <div class="container-fluid">
                </div>
            </div>
            <!-- Kết thúc Container-fluid -->
        </div>
        <!-- Kết thúc Page Body -->
        <!-- Modal Xác nhận đăng xuất -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body">
                        <h5 class="modal-title" id="staticBackdropLabel">Đăng xuất</h5>
                        <p>Bạn có chắc chắn muốn đăng xuất không?</p>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                        <div class="button-box">
                            <button type="button" class="btn btn--no" data-bs-dismiss="modal">Không</button>
                            <button type="button" class="btn btn--yes btn-primary">Có</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Kết thúc Modal -->
    </div>

    <!-- Bắt đầu Hộp thoại xác nhận xóa -->
    <div class="modal fade theme-modal remove-coupon" id="exampleModalToggle" aria-hidden="true" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header d-block text-center">
                    <h5 class="modal-title w-100" id="exampleModalLabel22">Bạn có chắc chắn?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="remove-box">
                        <p>
                            Quyền cho nhóm/người dùng này sẽ bị xóa. Hành động này không thể hoàn tác.
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-animation btn-md fw-bold" data-bs-dismiss="modal">Không</button>
                    <button type="button" class="btn btn-animation btn-md fw-bold" data-bs-target="#exampleModalToggle2"
                            data-bs-toggle="modal" data-bs-dismiss="modal">
                        Có
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade theme-modal remove-coupon" id="exampleModalToggle2" aria-hidden="true" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLabel12">Hoàn thành!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="remove-box text-center">
                        <div class="wrapper">
                            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                                <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
                                <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                            </svg>
                        </div>
                        <h4 class="text-content">Đã xóa thành công.</h4>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Kết thúc Hộp thoại xác nhận xóa -->
</body>

</html>