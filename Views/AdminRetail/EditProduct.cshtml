@model Village_Manager.Models.Product 

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_AdminFamViet.cshtml";
}
@foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <p class="text-danger">@modelError.ErrorMessage</p>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Chỉnh sửa sản phẩm</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditProduct" asp-controller="AdminRetail" method="post">
                        @* Hidden Id *@
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductType" class="form-label"></label>
                            <select asp-for="ProductType" class="form-select">
                                <option value="raw">Nguyên liệu thô</option>
                                <option value="processed">Đã qua chế biến</option>
                            </select>
                            <span asp-validation-for="ProductType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        @* <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div> *@

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">Lưu thay đổi</button>
                            <a asp-action="Products" asp-controller="AdminRetail" class="btn btn-secondary">Hủy bỏ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

