@model List<Village_Manager.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm đã ẩn";
    Layout = "~/Views/Shared/_AdminRetail.cshtml";
}

<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <div class="page-body-wrapper">
        <div class="page-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card card-table">
                            <div class="card-body">
                                <div class="title-header option-title d-sm-flex d-block">
                                    <h5>Danh sách sản phẩm hạn chế</h5>
                                    <div class="right-options d-flex" style="gap: 15px;">
                                        <a asp-action="Products" asp-controller="AdminRetail" class="btn btn-outline-primary">← Quay về danh sách bán</a>
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table all-package theme-table table-product" id="table_id">
                                        <thead>
                                            <tr>
                                                <th>Ảnh</th>
                                                <th>Tên Sản Phẩm</th>
                                                <th>Tình Trạng</th>
                                                <th>Số Lượng</th>
                                                <th>Gía</th>
                                                <th>Hành Động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var product in Model)
                                            {
                                                var imageUrl = product.ProductImages.FirstOrDefault()?.ImageUrl ?? "/images/no-image.png";
                                                <tr>
                                                    <td><img src="@imageUrl" width="60" height="60" /></td>
                                                    <td>@product.Name</td>
                                                    <td>@(product.ProductType == "raw" ? "Nguyên liệu thô" : "Đã qua chế biến")</td>
                                                    <td>@product.Quantity</td>
                                                    <td>@product.Price.ToString("N0") VND</td>
                                                    <td>
                                                        <ul class="d-flex gap-2 list-unstyled">
                                                            <li>
                                                                <a asp-action="ProductDetail" asp-controller="AdminRetail" asp-route-id="@product.Id">
                                                                    <i class="ri-eye-line"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a asp-controller="AdminRetail" asp-action="EditProduct" asp-route-id="@product.Id">
                                                                    <i class="ri-pencil-line"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <form asp-action="RestoreProduct" asp-controller="AdminRetail" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn hiện lại sản phẩm này không?')">
                                                                    <input type="hidden" name="productId" value="@product.Id" />
                                                                    <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Bạn có chắc chắn muốn hiển thị lại sản phẩm này?')">Hiện lại</button>
                                                                </form>
                                                            </li>
                                                        </ul>
                                                        
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination justify-content-center">
                                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                            {
                                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                    <a class="page-link" href="@Url.Action("HiddenProducts", new { page = i })">@i</a>
                                                </li>
                                            }
                                        </ul>
                                    </nav>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
