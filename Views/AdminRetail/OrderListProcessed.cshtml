@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <script>
        // Function to translate status to Vietnamese
        function translateStatus(status) {
            const statusMap = {
                'Pending': 'Chờ xử lý',
                'Processing': 'Đang xử lý',
                'Shipped': 'Đang giao hàng',
                'Delivered': 'Đã giao hàng',
                'Cancelled': 'Đã hủy',
                'Returned': 'Đã trả hàng'
            };
            return statusMap[status] || status;
        }

        // Format date to dd/MM/yyyy
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('vi-VN');
        }

        async function fetchProcessedOrders() {
            try {
                const res = await fetch('/api/OrderRetailApi/processed-orders');
                if (!res.ok) throw new Error('Không thể tải dữ liệu đơn hàng');
                
                const orders = await res.json();
                const tableBody = document.getElementById('processedOrdersTable');
                
                if (!tableBody) return;
                
                tableBody.innerHTML = "";

                if (orders.length === 0) {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td colspan="6" class="text-center">
                            <div class="alert alert-info">Không có đơn hàng nào đã xử lý</div>
                        </td>
                    `;
                    tableBody.appendChild(tr);
                    return;
                }

                orders.forEach(order => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${order.id}</td>
                        <td>${formatDate(order.date)}</td>
                        <td>${translateStatus(order.status)}</td>
                        <td>${order.customerEmail || 'Khách hàng'}</td>
                        <td>${order.totalAmount ? order.totalAmount.toLocaleString('vi-VN') + '₫' : 'Liên hệ'}</td>
                        <td>
                            <a href="/AdminRetail/OrderDetailRetail/${order.id}" class="text-info me-2" title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    `;
                    tableBody.appendChild(tr);
                });
            } catch (error) {
                console.error('Lỗi khi tải đơn hàng:', error);
                const tableBody = document.getElementById('processedOrdersTable');
                if (tableBody) {
                    tableBody.innerHTML = `
                        <tr>
                            <td colspan="6" class="text-center text-danger">
                                Đã xảy ra lỗi khi tải dữ liệu. Vui lòng thử lại sau.
                            </td>
                        </tr>
                    `;
                }
            }
        }

        // Tự động cập nhật mỗi 10 giây
        const REFRESH_INTERVAL = 10000; // 10 giây
        
        // Hàm khởi tạo
        function initialize() {
            // Tải dữ liệu ngay lập tức
            fetchProcessedOrders();
            
            // Thiết lập tự động cập nhật
            const refreshInterval = setInterval(fetchProcessedOrders, REFRESH_INTERVAL);
            
            // Dọn dẹp khi trang đóng
            window.addEventListener('beforeunload', () => {
                clearInterval(refreshInterval);
            });
        }
        
        // Chạy khi trang đã tải xong
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initialize);
        } else {
            initialize();
        }
    </script>
