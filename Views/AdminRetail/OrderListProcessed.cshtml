<script>
    let currentPage = 1;
    const pageSize = 10;

    document.getElementById("searchInput").addEventListener("input", () => {
        currentPage = 1; // Reset về trang 1 khi search mới
        fetchProcessedOrders();
    });

    async function fetchProcessedOrders() {
        const searchTerm = document.getElementById("searchInput").value.trim();

        const res = await fetch(`/api/OrderRetailApi/processed-orders?page=${currentPage}&pageSize=${pageSize}&searchTerm=${encodeURIComponent(searchTerm)}`);
        const data = await res.json();
        const orders = data.orders;

        const tableBody = document.getElementById("processedOrdersTable");
        tableBody.innerHTML = "";

        orders.forEach(order => {
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>${order.id}</td>
                <td>${new Date(order.date).toLocaleDateString()}</td>
                <td>${order.status}</td>
                <td>${order.customerEmail}</td>
                <td>${order.totalAmount.toLocaleString('vi-VN')}₫</td>
                <td>
                    <a href="/AdminRetail/OrderDetailRetail/${order.id}" class="text-info me-2" title="Chi tiết">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
            `;
            tableBody.appendChild(tr);
        });

        renderPagination(data.totalRecords, data.pageSize, data.page);
    }

    function renderPagination(totalRecords, pageSize, current) {
        const totalPages = Math.ceil(totalRecords / pageSize);
        const pagination = document.getElementById("pagination");
        pagination.innerHTML = "";

        for (let i = 1; i <= totalPages; i++) {
            const btn = document.createElement("button");
            btn.innerText = i;
            btn.className = `btn btn-sm ${i === current ? 'btn-primary' : 'btn-outline-primary'} me-1`;
            btn.addEventListener("click", () => {
                currentPage = i; // cập nhật đúng currentPage
                fetchProcessedOrders(); // gọi lại đúng page
            });
            pagination.appendChild(btn);
        }
    }

    fetchProcessedOrders();
    setInterval(fetchProcessedOrders, 2000);
</script>



