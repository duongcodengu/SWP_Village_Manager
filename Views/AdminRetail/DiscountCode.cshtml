
@{
    ViewData["Title"] = "Discount Codes";
    Layout = "~/Views/Shared/_AdminRetail.cshtml";
}

<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <div class="page-body-wrapper">
        <div class="page-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card card-table">
                            <div class="card-body">
                                <div class="title-header option-title d-sm-flex d-block justify-content-between">
                                    <h5>Danh sách mã giảm giá</h5>
                                </div>

                                <div class="table-responsive mt-4">
                                    <table class="table table-bordered table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>#</th>
                                                <th>Mã code</th>
                                                <th>Phần trăm giảm giá</th>
                                                <th>Giới hạn sử dụng</th>
                                                <th>Trạng thái</th>
                                                <th>Ngày tạo</th>
                                                <th>Ngày hết hạn</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var code in Model)
                                            {
                                                <tr>
                                                    <td>@code.Id</td>
                                                    <td>@code.Code</td>
                                                    <td>@code.DiscountPercent%</td>
                                                    <td>@code.UsageLimit</td>
                                                    <td>@code.Status</td>
                                                    <td>@code.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                                    <td>@code.ExpiredAt?.ToString("dd/MM/yyyy")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
