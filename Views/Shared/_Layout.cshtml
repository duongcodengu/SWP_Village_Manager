    </style>

    <script>
        (function () {
            const themeColor = localStorage.getItem("theme-color");
            const theme = localStorage.getItem("theme");
            const direction = localStorage.getItem("direction");

            //theme color
            if (themeColor) {
                document.documentElement.style.setProperty("--theme-color", themeColor);
                document.documentElement.style.setProperty("--theme-color-rgb", themeColor);
            }

            //dark/light
            if (theme === "dark") {
                document.documentElement.classList.remove("light");
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
                document.documentElement.classList.add("light");
            }

            //RTL/LTR
            if (direction === "rtl") {
                document.documentElement.setAttribute("dir", "rtl");
            } else {
                document.documentElement.setAttribute("dir", "ltr");
            }

            //#color-link -> CSS
            const applyThemeCss = () => {
                const colorLink = document.getElementById("color-link");
                if (colorLink) {
                    if (theme === "dark") {
                        colorLink.setAttribute("href", "/css/dark.css");
                    } else {
                        colorLink.setAttribute("href", "/css/style.css");
                    }
                } else {
                    setTimeout(applyThemeCss, 100);
                }
            };
            applyThemeCss();
        })();
    </script>

