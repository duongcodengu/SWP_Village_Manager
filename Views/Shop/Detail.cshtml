                        <!-- Trending Product -->


                        <ul id="top-selling-list" class="product-list product-right-sidebar border-0 p-0"></ul>

                        <script>
                            async function loadTopSelling() {
                                const res = await fetch('/top4-selling');
                                const products = await res.json();

                                const list = document.getElementById('top-selling-list');
                                list.innerHTML = '';

                                products.forEach(p => {
                                    list.innerHTML += `
                           

                                
                                    <li>
                                        <div class="offer-product">
                                        <li>
                                            <div class="offer-product">
                                                <a href="/shop/product-detail/${p.productId}" class="offer-image">
                                                    <img src="${p.imageUrl}" class="img-fluid blur-up lazyload" alt="${p.productName}" />
                                                </a>
                                                <div class="offer-detail">
                                                    <div>
                                                        <a href="/shop/product-detail/${p.productId}">
                                                            <h6 class="name">${p.productName}</h6>
                                                        </a>
                                                        <h6 class="price theme-color">${p.totalSold.toLocaleString()} đ</h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                
                                    `;
                                });
                            }

                            window.onload = loadTopSelling;
                        </script>



                        <!-- Banner Section -->
                      
                    </div>
                </div>
            </div>
        </div>
