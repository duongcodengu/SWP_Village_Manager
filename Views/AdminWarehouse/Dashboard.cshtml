                                        {
                                            foreach (var category in categories)
                                            {
                                                <div>
                                                    <div class="dashboard-category">
                                                        <a href="javascript:void(0)" class="category-image">
                                                            <img src="@category.ImageUrl" class="img-fluid" alt="" />
                                                        </a>
                                                        <a href="javascript:void(0)" class="category-name">
                                                            <h6>@category.Name</h6>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- chart card section End -->
                        <!-- Earning chart star-->
                        <div class="col-xl-6">
                            <div class="card o-hidden card-hover">
                                <div class="card-header border-0 pb-1">
                                    <div class="card-header-title">
                                        <h4>Revenue Report</h4>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <div class="revenue-chart-container" style="padding:24px; background: #fff; border-radius: 18px; box-shadow: 0 3px 18px #0001; max-width: 700px; margin: auto;">
