@using System.Linq
@model List<Village_Manager.Models.User>
@{
    ViewData["Title"] = "Tất cả người dùng";
    Layout = "~/Views/Shared/_AdminWarehouse.cshtml";
}
<!DOCTYPE html>
<html lang="vi" dir="ltr">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="FamViệt - Quản lý người dùng, giao diện quản trị hiện đại, tối ưu cho người Việt.">
    <meta name="keywords"
          content="FamViệt, quản lý người dùng, giao diện quản trị, dashboard, web app">
    <meta name="author" content="FamViệt">
    <link rel="icon" href="~/back-end/images/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/back-end/images/favicon.png" type="image/x-icon">
    <title>FamViệt - Tất cả người dùng</title>
    <!-- Google font-->
     <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet"> 

</head>

<body>
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <!-- Page Body Start -->
        <div class="page-body-wrapper">
            <!-- Container-fluid starts-->
            <div class="page-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <div class="title-header option-title">
                                                    <h5>Tất cả người dùng</h5>
                                                </div>
                                               
                                            </div>
                                            @if (TempData["SuccessMessage"] != null)
                                            {
                                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                                    @TempData["SuccessMessage"]
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                </div>
                                            }
                                                                                         <div class="title-header option-title">
                                                 <form class="d-inline-flex">
                                                     <a href="/adduser" class="align-items-center btn btn-theme d-flex me-2">
                                                         <i data-feather="plus"></i>Thêm mới
                                                     </a>
                                                     <a href="/deleted-users" class="align-items-center btn btn-outline-secondary d-flex">
                                                         <i data-feather="trash-2"></i>Người dùng đã xóa
                                                     </a>
                                                 </form>
                                             </div>

                                            <!-- Lọc theo vai trò (role) -->
                                            <form method="get" class="mb-3 d-flex align-items-center" id="roleFilterForm">
                                                <label for="roleId" class="me-2 mb-0">Lọc theo vai trò:</label>
                                                <select name="roleId" id="roleId" class="form-select me-2" style="width:auto;">
                                                    <option value="0" selected="@(ViewBag.RoleId == 0 ? "selected" : null)">Tất cả</option>
                                                    @foreach (var role in ViewBag.Roles)
                                                    {
                                                        <option value="@role.Id" selected="@(ViewBag.RoleId == role.Id ? "selected" : null)">@role.Name</option>
                                                    }
                                                </select>
                                                <label for="sortOrder" class="me-2 mb-0">Sắp xếp:</label>
                                                <select name="sortOrder" id="sortOrder" class="form-select me-2" style="width:auto;">
                                                    <option value="asc" selected="@(ViewBag.SortOrder == "asc" ? "selected" : null)">Tên A → Z</option>
                                                    <option value="desc" selected="@(ViewBag.SortOrder == "desc" ? "selected" : null)">Tên Z → A</option>
                                                </select>
                                                <input type="hidden" name="searchUser" value="@ViewBag.SearchUser" />
                                                <button type="submit" class="btn btn-primary">Lọc</button>
                                            </form>

                                            <div class="table-responsive table-product">
                                                <table class="table all-package theme-table" id="table_id">
                                                    <thead>
                                                        <tr>
                                                            <th>ID</th>
                                                            <th>Tên đăng nhập</th>
                                                            <th>Email</th>
                                                            <th>Vai trò</th>
                                                            <th>Số điện thoại</th>
                                                            <th>Ngày tạo</th>
                                                            <th>Trạng thái</th>
                                                            <th>Tuỳ chọn</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model != null)
                                                        {
                                                            @foreach (var user in Model)
                                                            {
                                                                <tr>
                                                                    <td>@user.Id</td>
                                                                    <td>@user.Username</td>
                                                                    <td>@user.Email</td>
                                                                    <td>@(user.Role?.Name ?? "N/A")</td>
                                                                    <td>@(user.Phone ?? "N/A")</td>
                                                                    <td>@(user.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                                                    <td>
                                                                        @(user.IsActive ? "Hoạt động" : "Bị khóa")
                                                                    </td>
                                                                    <td>    
                                                                        <ul>
                                                                            <li>
                                                                                <a href="@Url.Action("EditUser", "AdminWarehouse", new { id = user.Id })">Sửa</a>
                                                                            </li>
                                                                            <li>
                                                                                @if (user.Id != 1)
                                                                                {
                                                                                    if (user.IsActive)
                                                                                    {
                                                                                        <form asp-action="BanUser" asp-controller="AdminWarehouse" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn ban tài khoản này không?');">
                                                                                            <button type="submit" style="border: none; background: none; color: orange;">Ban</button>
                                                                                        </form>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <form asp-action="UnbanUser" asp-controller="AdminWarehouse" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn mở khóa tài khoản này không?');">
                                                                                            <button type="submit" style="border: none; background: none; color: green;">Unban</button>
                                                                                        </form>
                                                                                    }
                                                                                }
                                                                            </li>
                                                                            <li>
                                                                                @if (user.Id != 1)
                                                                                {
                                                                                    <form asp-action="Delete" asp-controller="AdminWarehouse" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa người dùng này không?');" style="display:inline;">
                                                                                        <button type="submit" style="border: none; background: none; color: red;">
                                                                                            Xóa
                                                                                        </button>
                                                                                    </form>
                                                                                }
                                                                            </li>
                                                                        </ul>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <tr>
                                                                <td colspan="6" class="text-center">Không có người dùng nào trong hệ thống.</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- All User Table Ends -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="User pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="?searchUser=@ViewBag.SearchUser&page=@(ViewBag.CurrentPage - 1)">Trước</a>
                            </li>
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" href="?searchUser=@ViewBag.SearchUser&page=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="?searchUser=@ViewBag.SearchUser&page=@(ViewBag.CurrentPage + 1)">Sau</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
            <!-- Container-fluid end -->
        </div>
        <!-- Page Body End -->
    </div>

   
</body>
</html>