@model Village_Manager.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Views/Shared/_AdminWarehouse.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-8 m-auto">
                        <div class="card">
                            <div class="card-body">
                                <div class="title-header option-title">
                                    <h5>Chỉnh sửa người dùng</h5>
                                </div>
                                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button">
                                            Tài khoản
                                        </button>
                                    </li>
                                </ul>

                                <div class="tab-content" id="pills-tabContent">
                                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel">
                                        <form class="theme-form theme-form-2 mega-form" asp-action="EditUser" asp-controller="AdminWarehouse" asp-route-id="@Model.Id" method="post">
                                            @Html.AntiForgeryToken()
                                            @if (TempData["Error"] != null)
                                            {
                                                <div class="alert alert-danger">@TempData["Error"]</div>
                                            }
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                            <div class="card-header-1">
                                                <h5>Thông tin người dùng</h5>
                                            </div>

                                            <div class="row">
                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-lg-2 col-md-3 mb-0">Tên đăng nhập</label>
                                                    <div class="col-md-9 col-lg-10">
                                                        @if (Model.Id == 1)
                                                        {
                                                            <input asp-for="Username" class="form-control" type="text" readonly />
                                                            <span class="text-muted">Không thể đổi username của tài khoản này</span>
                                                        }
                                                        else
                                                        {
                                                            <input asp-for="Username" class="form-control" type="text" required />
                                                            <span asp-validation-for="Username" class="text-danger"></span>
                                                        }
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-lg-2 col-md-3 col-form-label form-label-title">Địa chỉ Email</label>
                                                    <div class="col-md-9 col-lg-10">
                                                        <input asp-for="Email" class="form-control" type="email" required>
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-lg-2 col-md-3 col-form-label form-label-title">Số điện thoại</label>
                                                    <div class="col-md-9 col-lg-10">
                                                        <input asp-for="Phone" class="form-control" type="text" required>
                                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-lg-2 col-md-3 col-form-label form-label-title">Mật khẩu mới</label>
                                                    <div class="col-md-9 col-lg-10">
                                                        <input name="newPassword" class="form-control" type="password">
                                                        <small class="text-muted">Để trống nếu không muốn đổi mật khẩu</small>
                                                        @if (ViewData.ModelState["newPassword"] != null && ViewData.ModelState["newPassword"].Errors.Count > 0)
                                                        {
                                                            <span class="text-danger">@ViewData.ModelState["newPassword"].Errors[0].ErrorMessage</span>
                                                        }
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="col-lg-2 col-md-3 col-form-label form-label-title">Vai trò</label>
                                                    <div class="col-md-9 col-lg-10">
                                                        @if (Model.Id == 1)
                                                        {
                                                            <select class="form-control" disabled>
                                                                @foreach (var role in ViewBag.Roles)
                                                                {
                                                                    var selected = Model.RoleId == role.Id ? "selected=\"selected\"" : "";
                                                                    @Html.Raw($"<option value=\"{role.Id}\" {selected}>{role.Name}</option>")
                                                                }
                                                            </select>
                                                            <input type="hidden" name="RoleId" value="@Model.RoleId" />
                                                            <span class="text-muted">Không thể đổi vai trò của tài khoản này</span>
                                                        }
                                                        else
                                                        {
                                                            <select asp-for="RoleId" class="form-control" required>
                                                                <option value="">-- Select Role --</option>
                                                                @foreach (var role in ViewBag.Roles)
                                                                {
                                                                    <option value="@role.Id">@role.Name</option>
                                                                }
                                                            </select>
                                                            <span asp-validation-for="RoleId" class="text-danger"></span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="card-submit-button">
                                                <button class="btn btn-animation ms-auto" type="submit">Cập nhật</button>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="tab-pane fade" id="pills-profile" role="tabpanel">
                                        <div class="card-header-1">
                                            <h5>Phân quyền sản phẩm</h5>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label class="col-md-2 mb-0">Thêm danh mục</label>
                                            <div class="col-md-9">
                                                <form class="radio-section">
                                                    <label>
                                                        <input type="radio" name="opinion" >
                                                        <i></i>
                                                        <span>Cho phép</span>
                                                    </label>

                                                    <label>
                                                        <input type="radio" name="opinion" checked />
                                                        <i></i>
                                                        <span>Không cho phép</span>
                                                    </label>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-md-2 mb-0">Cập nhật danh mục</label>
                                            <div class="col-md-9">
                                                <form class="radio-section">
                                                    <label>
                                                        <input type="radio" name="opinion" />
                                                        <i></i>
                                                        <span>Cho phép</span>
                                                    </label>

                                                    <label>
                                                        <input type="radio" name="opinion" checked>
                                                        <i></i>
                                                        <span>Không cho phép</span>
                                                    </label>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-md-2 mb-0">Xóa sản phẩm</label>
                                            <div class="col-md-9">
                                                <form class="radio-section">
                                                    <label>
                                                        <input type="radio" name="opinion" >
                                                        <i></i>
                                                        <span>Cho phép</span>
                                                    </label>

                                                    <label>
                                                        <input type="radio" name="opinion" checked />
                                                        <i></i>
                                                        <span>Không cho phép</span>
                                                    </label>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-md-2 mb-0">Áp dụng khuyến mãi</label>
                                            <div class="col-md-9">
                                                <form class="radio-section">
                                                    <label>
                                                        <input type="radio" name="opinion" />
                                                        <i></i>
                                                        <span>Cho phép</span>
                                                    </label>

                                                    <label>
                                                        <input type="radio" name="opinion" checked>
                                                        <i></i>
                                                        <span>Không cho phép</span>
                                                    </label>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="card-header-1">
                                            <h5>Phân quyền danh mục</h5>
                                        </div>
                                        <div class="mb-4 row align-items-center">
                                            <label class="col-md-2 mb-0">Thêm danh mục</label>
                                            <div class="col-md-9">
                                                <form class="radio-section">
                                                    <label>
                                                        <input type="radio" name="opinion" >
                                                        <i></i>
                                                        <span>Cho phép</span>
                                                    </label>

                                                    <label>
                                                        <input type="radio" name="opinion" checked />
                                                        <i></i>
                                                        <span>Không cho phép</span>
                                                    </label>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-md-2 mb-0">Cập nhật danh mục</label>
                                            <div class="col-md-9">
                                                <form class="radio-section">
                                                    <label>
                                                        <input type="radio" name="opinion" />
                                                        <i></i>
                                                        <span>Cho phép</span>
                                                    </label>

                                                    <label>
                                                        <input type="radio" name="opinion" checked>
                                                        <i></i>
                                                        <span>Không cho phép</span>
                                                    </label>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-md-2 mb-0">Xóa danh mục</label>
                                            <div class="col-md-9">
                                                <form class="radio-section">
                                                    <label>
                                                        <input type="radio" name="opinion" />
                                                        <i></i>
                                                        <span>Cho phép</span>
                                                    </label>

                                                    <label>
                                                        <input type="radio" name="opinion" checked>
                                                        <i></i>
                                                        <span>Không cho phép</span>
                                                    </label>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="mb-4 row align-items-center">
                                            <label class="col-md-2 mb-0">Áp dụng khuyến mãi</label>
                                            <div class="col-md-9">
                                                <form class="radio-section">
                                                    <label>
                                                        <input type="radio" name="opinion" >
                                                        <i></i>
                                                        <span>Cho phép</span>
                                                    </label>

                                                    <label>
                                                        <input type="radio" name="opinion" checked />
                                                        <i></i>
                                                        <span>Không cho phép</span>
                                                    </label>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 