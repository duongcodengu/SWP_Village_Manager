@model Village_Manager.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_AdminWarehouse.cshtml";
}
<style>
    .carousel-inner img {
        height: 400px;
        object-fit: cover;
    }
    .custom-carousel-icon {
        background-color: black;
        border-radius: 50%;
        width: 2.5rem;
        height: 2.5rem;
        background-size: 50% 50%;
        background-repeat: no-repeat;
        background-position: center;
        opacity: 0.8;
    }
     <hr class="my-4" />
    .carousel-control-next-icon.custom-carousel-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23ffffff' viewBox='0 0 8 8'%3E%3Cpath d='M0 0v8l4-4z'/%3E%3C/svg%3E");
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<div>
    <h1>Thông tin sản phẩm</h1>
</div>

<div class="container" style="margin-left: 260px;">
    <div class="container mt-5">
        <div class="card shadow rounded-4 border-0">
            <div class="card-header bg-success text-white rounded-top-4">
                <h3 class="mb-0">Chi tiết sản phẩm</h3>
            </div>

            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Tên sản phẩm:</h5>
                        <p>@Model.Name</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Mã danh mục:</h5>
                        <p>@Model.CategoryId</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Giá:</h5>
                        <p>@Model.Price.ToString("C")</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Số lượng:</h5>
                        <p>@Model.Quantity</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Loại sản phẩm:</h5>
                        <p>@Model.ProductType</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Nông dân:</h5>
                        <p>@(Model.Farmer != null ? Model.Farmer.FullName : "Không có")</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>Ngày hết hạn:</h5>
                        <p>@(Model.ExpirationDate?.ToString("dd/MM/yyyy") ?? "Không có")</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Thời gian sản xuất:</h5>
                        <p>@(Model.ProcessingTime?.ToString("dd/MM/yyyy") ?? "Không có")</p>
                    </div>
                </div>

                <hr />

                <h4 class="mb-3">Hình ảnh sản phẩm</h4>
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    <div id="productImagesCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner rounded shadow">

                            @for (int i = 0; i < Model.ProductImages.Count; i++)
                            {
                                var img = Model.ProductImages.ElementAt(i);
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@img.ImageUrl" class="d-block w-100" alt="Image @i" style="object-fit: cover; height: auto;" />
                                    @if (!string.IsNullOrEmpty(img.Description))
                                    {
                                        <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                                            <p class="text-white">@img.Description</p>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#productImagesCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#productImagesCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
                else
                {
                    <p class="text-muted">Không có hình ảnh nào.</p>
                }

                <div class="mt-4">
                    <a href="/products" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>