@model Village_Manager.Models.Role
@{
    ViewData["Title"] = "Thêm Role Mới";
    Layout = "~/Views/Shared/_AdminWarehouse.cshtml";
}
<div class="page-body">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary" style="background-color: #0da487 !important; color: #fff; border-radius: 15px 15px 0 0;">
                        <h5 class="mb-0" style="color: #fff;">Thêm Role Mới</h5>
                    </div>
                    <div class="card-body" style="background: #fff;">
                        <form asp-action="Add" asp-controller="Role" method="post">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label font-roboto">Tên Role</label>
                                <input asp-for="Name" class="form-control" placeholder="Nhập tên role..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-theme btn-animation">Thêm</button>
                                <a href="/adminwarehouse/role" class="btn btn-outline-primary">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 