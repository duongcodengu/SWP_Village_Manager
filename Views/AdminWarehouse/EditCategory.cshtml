@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Views/Shared/_AdminWarehouse.cshtml";
}
@model Village_Manager.Models.ProductCategory

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8 m-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Chỉnh sửa danh mục</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditCategory" asp-controller="Category" method="post" enctype="multipart/form-data" class="theme-form theme-form-2 mega-form">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />
                        <div class="mb-4 row align-items-center">
                            <label asp-for="Name" class="form-label-title col-sm-3 mb-0">Tên danh mục</label>
                            <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" placeholder="Tên danh mục" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4 row align-items-center">
                            <label class="form-label-title col-sm-3 mb-0">Ảnh hiện tại</label>
                            <div class="col-sm-9">
                                 @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" alt="Ảnh danh mục" style="max-height:100px;" class="mb-2" />
                                } 
                            </div>
                        </div>

                        <div class="mb-4 row align-items-center">
                            <label class="form-label-title col-sm-3 mb-0">Tải ảnh mới</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="file" name="imgFile" accept="image/*" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-submit-button text-end">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <a asp-action="Listcate" class="btn btn-outline-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>