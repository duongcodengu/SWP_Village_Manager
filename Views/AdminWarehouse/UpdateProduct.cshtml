@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Views/Shared/_AdminWarehouse.cshtml";
}
<!DOCTYPE html>
<html lang="vi" dir="ltr">

<head>
    <!-- meta data -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="FamViệt - Trang quản lý sản phẩm, giao diện tiếng Việt, dễ sử dụng.">
    <meta name="keywords"
          content="quản lý sản phẩm, FamViệt admin, cập nhật sản phẩm, giao diện quản trị">
    <meta name="author" content="FamViệt">
    <link rel="icon" href="~/back-end/images/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/back-end/images/favicon.png" type="image/x-icon">
    <title>FamViệt - Cập nhật sản phẩm</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">

    <!-- Linear Icon css -->
    <link rel="stylesheet" href="~/back-end/css/linearicon.css">

    <!-- Fontawesome css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/font-awesome.css">

    <!-- Themify icon css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/themify.css">

    <!--Dropzon css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/dropzone.css">

    <!-- Feather icon css-->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/feather-icon.css">

    <!-- remixicon css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/remixicon.css">

    <!-- Select2 css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/select2.min.css">

    <!-- Plugins css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/scrollbar.css">
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/animate.css">
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/chartist.css">
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/date-picker.css">

    <!-- Bootstrap css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/bootstrap.css">

    <!-- Bootstrap-tag input css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/vendors/bootstrap-tagsinput.css">

    <!-- App css -->
    <link rel="stylesheet" type="text/css" href="~/back-end/css/style.css">
</head>

<body>
    <!-- tap on top start -->
    <div class="tap-top">
        <span class="lnr lnr-chevron-up"></span>
    </div>
    <!-- tap on tap end -->
    <!-- page-wrapper start -->
    <!-- Page Body start -->
    <div class="page-body-wrapper">

        <div class="page-body">

            <!-- New Product Add Start -->
            <form class="theme-form theme-form-2 mega-form" method="POST" action="/updateproduct" enctype="multipart/form-data">
                <!-- Product Information -->
                @Html.AntiForgeryToken()
                <input type="hidden" name="FarmerId" value="@Model.FarmerId" />
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2"><h5>Thông tin sản phẩm</h5></div>

                        <div class="mb-4 row">
                            <label class="col-sm-3">Tên sản phẩm</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="name" value="@Model.Name" required>
                            </div>
                        </div>

                        <div class="mb-4 row">
                            <label class="col-sm-3">Loại sản phẩm</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="product_type">
                                    <option value="processed">Đã qua chế biến</option>
                                    <option value="raw">Nguyên liệu thô</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-4 row">
                            <label class="col-sm-3">Danh mục</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="category_id" required>
                                    <option disabled>-- Chọn danh mục --</option>
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        if (category.Id == Model.CategoryId)
                                        {
                                            <option value="@category.Id" selected="selected">@category.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="mb-4 row">
                            <label class="col-sm-3">Số lượng</label>
                            <div class="col-sm-9">
                                <input type="number" name="quantity" class="form-control" value="@Model.Quantity" required>
                            </div>
                        </div>

                        <div class="mb-4 row">
                            <label class="col-sm-3">Giá</label>
                            <div class="col-sm-9">
                                <input type="number" name="price" class="form-control" step="0.01" value="@Model.Price" required>
                            </div>
                        </div>

                        <div class="mb-4 row">
                            <label class="col-sm-3">Ngày hết hạn</label>
                            <div class="col-sm-9">
                                <input type="date" name="expiration_date" class="form-control" value="@Model.ExpirationDate?.ToString("yyyy-MM-dd")">
                            </div>
                        </div>

                        <div class="mb-4 row">
                            <label class="col-sm-3">Thời gian xử lý</label>
                            <div class="col-sm-9">
                                <input type="date" name="processing_time" class="form-control" value="@Model.ProcessingTime?.ToString("yyyy-MM-dd")">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hình ảnh sản phẩm -->
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2"><h5>Hình ảnh sản phẩm</h5></div>

                        <div class="mb-4 row">
                            <label class="col-sm-3">Hình ảnh</label>
                            <div class="col-sm-9">
                                <input type="file" name="images" class="form-control" multiple accept="image/*">
                            </div>
                        </div>

                        <div class="mb-4 row">
                            <label class="col-sm-3">Mô tả hình ảnh</label>
                            <div class="col-sm-9">
                                <textarea name="image_description" class="form-control" rows="3" placeholder="Mô tả hình ảnh (không bắt buộc)..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">Cập nhật sản phẩm</button>
                </div>
            </form>


            <!-- New Product Add End -->
        </div>
        <!-- Container-fluid End -->
    </div>

    <!-- page-wrapper End -->
    <!-- Modal Start -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog  modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <h5 class="modal-title" id="staticBackdropLabel">Đăng xuất</h5>
                    <p>Bạn có chắc chắn muốn đăng xuất không?</p>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    <div class="button-box">
                        <button type="button" class="btn btn--no" data-bs-dismiss="modal">Không</button>
                        <button type="button" onclick="location.href = '/logout';"
                                class="btn btn--yes btn-primary">
                            Có
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal End -->

    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const priceInput = this.querySelector('input[name="price"]');
            const quantityInput = this.querySelector('input[name="quantity"]');

            const price = priceInput.value.trim();
            const quantity = quantityInput.value.trim();

            const priceNum = Number(price);
            const quantityNum = Number(quantity);

            // Kiểm tra giá
            if (!price || isNaN(priceNum)) {
                alert('Giá phải là số hợp lệ.');
                priceInput.focus();
                e.preventDefault();
                return false;
            }
            if (priceNum <= 0) {
                alert('Giá phải là số dương.');
                priceInput.focus();
                e.preventDefault();
                return false;
            }
            if (priceNum < 1000) {
                alert('Giá không được nhỏ hơn 1000.');
                priceInput.focus();
                e.preventDefault();
                return false;
            }
            if (priceNum % 1000 !== 0) {
                alert('Giá phải là bội số của 1000.');
                priceInput.focus();
                e.preventDefault();
                return false;
            }

            // Kiểm tra số lượng
            if (!quantity || isNaN(quantityNum)) {
                alert('Số lượng phải là số hợp lệ.');
                quantityInput.focus();
                e.preventDefault();
                return false;
            }
            if (quantityNum <= 0) {
                alert('Số lượng phải lớn hơn 0.');
                quantityInput.focus();
                e.preventDefault();
                return false;
            }
            if (!Number.isInteger(quantityNum)) {
                alert('Số lượng phải là số nguyên.');
                quantityInput.focus();
                e.preventDefault();
                return false;
            }
        });
    </script>


</body>

</html>